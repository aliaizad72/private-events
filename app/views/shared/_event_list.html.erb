<ol>
  <% events.each do |event| %>
    <li>
      <ul>
        <li>
          Event name: <%= event.name %>
        </li>
        <li>
          Created by: <%= event.creator.email %>
        </li>
        <li>
          <%= link_to "More info", event_path(event.id) %>
        </li>
        <% unless event.attendees.include?(current_user) %>
          <li><%= link_to "Attend", attend_path(event.id) %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ol>

