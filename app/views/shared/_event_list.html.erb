<ol>
  <% events.each do |event| %>
    <li>
      <ul>
        <li>
          Event name: <%= event.name %>
        </li>
        <li>
          Date and time: <%= event.time.strftime("%d/%m/%Y %I:%M %p") %>
        </li>
        <% unless current_user == event.creator %>
        <li>
          Organised by: <%= link_to "#{event.creator.name}", user_path(event.creator.id) %>
        </li>
        <% end %>
        <% if event.attendees.include?(current_user) %>
          <li>You're going!</li>
        <% else %>
          <li><%= link_to "Attend", attend_path(event.id) %></li>
        <% end %>
        <li>
          <%= link_to "See who attends?", event_path(event.id) %>
        </li>
        <% if current_user == event.creator && event.time > Time.now %>
          <li>
            <%= link_to "Edit event", edit_event_path(event.id) %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ol>

